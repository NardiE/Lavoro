<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.edoardo.intrablet.WorkActivity"
    android:backgroundTint="@android:color/white"
    android:id="@+id/btnIntChi">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton3"
        android:background="@drawable/ac"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/imageButton2"
        android:layout_toStartOf="@+id/imageButton2" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnNuovoTra"
        android:background="@drawable/nt"
        android:layout_below="@+id/imageButton3"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnNuovatt"
        android:background="@drawable/na"
        android:layout_above="@+id/btnNuovoTra"
        android:layout_toRightOf="@+id/btnNuovoTra"
        android:layout_toEndOf="@+id/btnNuovoTra" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton2"
        android:background="@drawable/ia"
        android:layout_above="@+id/btnNuovatt"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
