<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.edoardo.intrablet.ElencoInterventi">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id = "@+id/txtvwElenco"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:text="Interventi Aperti:"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:id="@+id/elementoIntData"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:layout_weight="3"
            android:text="DATA"
            android:gravity="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:id="@+id/elementoIntNumero"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:layout_weight="2"
            android:text="NUM."
            android:gravity="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:id="@+id/elementoIntRag"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:layout_weight="4"
            android:text="RAG. SOC."
            android:gravity="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:id="@+id/elementoOpDataFine"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:layout_weight="1"
            android:text="ID"
            android:gravity="center"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <ListView
            android:layout_width="fill_parent"
            android:layout_height="750dp"
            android:id="@+id/lstvwInterventiElenco"/>
    </LinearLayout>
</LinearLayout>
