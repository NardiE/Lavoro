<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.edoardo.intrablet.DettaglioInterventi"
    android:orientation="vertical">

    <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtvwTipo"
            android:text="HW"
            android:layout_marginRight="20dp"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"             android:textColor="#000000"/>
        <TextView
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:id="@+id/txtvwHideClientID"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"             android:textColor="#000000"
            android:text="Num: "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="153"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"             android:textColor="#000000"
            android:id="@+id/txtvwNumero"
            android:layout_marginRight="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"             android:textColor="#000000"
            android:text="Data:  "/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/txtvwDataOra"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"             android:textColor="#000000"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="F"
            android:onClick="apriFirma"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cliente:"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"             android:textColor="#000000"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/txtvwClientCod"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"             android:textColor="#000000"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:id="@+id/txtvwRagioneSociale"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"             android:textColor="#000000"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/btncerca"
            android:text="CERCA"
            android:onClick="cercaCliente"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:id="@+id/txtvwIndirizzo"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"             android:textColor="#000000"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/txtvwLocalita"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"             android:textColor="#000000"/>

    </LinearLayout><LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="5dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tel: "
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"             android:textColor="#000000"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text=""
        android:id="@+id/txtvwTel"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"             android:textColor="#000000"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fax:"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"             android:textColor="#000000"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/txtvwFax"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"             android:textColor="#000000"/>

</LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"             android:textColor="#000000"
            android:text="Motivo: "/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="4"
        android:layout_marginTop="0dp">
        <EditText
            android:layout_width="fill_parent"
            android:backgroundTint="#ffe5e5e5"
            android:background="#ffdedede"
            android:layout_height="fill_parent"
            android:gravity="top|left"
            android:id="@+id/edttxtMotivoInt"/>

    </LinearLayout>

    <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:textColor="#000000"
            android:text="Articoli: "/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ID"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="#000000"
            android:layout_weight="1"
            android:gravity="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="MATR."
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_weight="1"
            android:gravity="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="CODICE"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_weight="1"
            android:gravity="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="DESCRIZIONE"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_weight="2"
            android:gravity="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="QT."
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_weight="1"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:id="@+id/lstvwArticoli"></ListView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Inserisci Articolo"
            android:onClick="insertArticle"
            android:id="@+id/btnInserisciArticolo"/>
    </LinearLayout><LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
        android:textColor="#000000"
        android:text="Operazioni: "/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="TIP."
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_weight="1"
            android:gravity="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="ID"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_weight="2"
            android:gravity="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="DATA"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_weight="3"
            android:gravity="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="ORA INIZIO"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_weight="3"
            android:gravity="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="ORA FINE"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_weight="3"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:id="@+id/lstvwOperazioniint"></ListView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Inserisci Operazione"
            android:onClick="insertOperation"
            android:id="@+id/btnInserisciOperazionetra"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:id="@+id/chkbxTrasferisci"
            android:text="Trasferisci ad Altro Tecnico"/>
        <CheckBox
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/chkbxNoTMR"
            android:text="NoTMR"/>
        <CheckBox
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/chkbxTMRAMF"
            android:text="TMR AMF"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="Registra"
            android:onClick="confermaIntervento"
            android:id="@+id/btnInserisciIntervento"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="Annulla"
            android:onClick="annullaIntervento"
            android:id="@+id/btnAnnullaIntervento"/>
    </LinearLayout>

</LinearLayout>
